{
  "manifest_version": 2,

  "name": "Pickle Rick",
  "description": "PICKLE RIIIIICK",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

    "permissions": [
      "tabs", "http://*/*", "*://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["pickle.css"],
      "js": ["pickle.js"]
    }
  ],

  "web_accessible_resources": [
    "img/*",
    "pickle.css",
    "pickle.js",
  ]

}